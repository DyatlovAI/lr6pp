@model WebApplication2rrr.Models.Phone
<style>
 body {
        background-color: whitesmoke;
        font-family: Arial, sans-serif;
    }

    .bodygr {
        text-align: center;
    }


    h2 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
    }

    .form-group input[type="text"],
    .form-group input[type="password"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }


    .form-group input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: purple;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .nav-link {
        display: flex;
        justify-content: center;
        align-items: center;
        </style>
<body>
    <h3>Оформление заказа</h3>

    <div class="info">
        <p>Смартфон: @Model.Name</p>
        <p>Цена: @Model.Price</p>
    </div>

    <form method="post">
        <input type="hidden" value="@ViewBag.PhoneId" name="PhoneID" />
        <div class="form-group">
        <label>Имя:</label>
        <input type="text" name="name" /> <br />
        </div>
        <div class="form-group">
        <label>Телефон:</label>
        <input type="text" name="phone" /> <br />
        </div>
        <div class="form-group">
        <label>Адрес:</label>
        <input type="text" name="address" /> <br />
        </div>
        <div class="form-group">
        <input type="submit" name="btn" value="Оформить заказ" />
        </div>
    </form>
</body>

